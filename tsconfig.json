{
    "compilerOptions": {
        "outDir": "./dist/",
        "sourceMap": true,
        "noImplicitAny": false,
        "moduleResolution": "node",
        "module": "es2015",
        "target": "es2018",
        "jsx": "react",
        "allowSyntheticDefaultImports": true,
        "resolveJsonModule": true,
        "esModuleInterop": true,
        "lib": ["es2018", "dom"]
    },
    "include": [
        "./src/**/*"
    ],
    "exclude": [
        "./src/__tests__/**/*"
    ]
}